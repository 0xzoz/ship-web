# Database shared with the API (match apps/api/.env)
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/ship"

# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
AUTH_SECRET="replace-with-strong-secret"

# Base URL of the Next.js app
AUTH_URL="http://localhost:3000"

# Google OAuth credentials (Google Cloud Console)
# Redirect URI: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID="replace-with-google-client-id"
GOOGLE_CLIENT_SECRET="replace-with-google-client-secret"

# GitHub OAuth credentials (GitHub Developer Settings)
# Redirect URI: http://localhost:3000/api/auth/callback/github
GITHUB_CLIENT_ID="replace-with-github-client-id"
GITHUB_CLIENT_SECRET="replace-with-github-client-secret"
